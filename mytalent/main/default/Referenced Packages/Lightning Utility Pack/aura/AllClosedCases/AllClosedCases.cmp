<aura:component access="global" controller="lighten.AuraDashboardController" implements="forceCommunity:availableForAllPageTypes,force:appHostable,flexipage:availableForAllPageTypes">
	<aura:attribute access="global" name="title" type="String" default="Total Closed Cases"/>
    <aura:handler name="init" value="{!this}" action="{!c.updateAllClosedCases}"/>
    <aura:attribute access="global" name="allClosedCount" type="Integer" default="00"/>
    
    <lighten:CountView count="{!v.allClosedCount}" title="{!v.title}" bordercolor="disabled"/>
</aura:component>