<aura:component implements="forceCommunity:availableForAllPageTypes" access="global">
	<article class="slds-card">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <span class="slds-icon_container slds-icon-standard-contact" title="description of icon when needed">
                        <lightning:icon iconName="action:new_contact" size="small"/>
                    </span>
                </div>
                <div class="slds-media__body">
                    <h2>
                        <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="[object Object]">
                            <span class="slds-text-heading_small">Basic info</span>
                        </a>
                    </h2>
                </div>
            </header>
            <div class="slds-no-flex">
                <button class="slds-button slds-button_neutral">Edit</button>
            </div>
        </div>
        <div class="slds-card__body slds-card__body_inner">
            <table class="slds-table slds-max-medium-table_stacked-horizontal">
                <tbody>
                    <tr class="slds-hint-parent">
                        <th scope="row" class="personal-img">
                            <div class="slds-m-top_medium slds-m-bottom_medium slds-cell-wrap">
                                    <lightning:icon iconName="action:user" size="large"/>
                            </div>
                        </th>
                        <td>
                            <div class="slds-m-top_medium slds-m-bottom_medium slds-cell-wrap">
                                <p class="personal-name">中川　裕美子</p>
                                <p class="personal-name">（栗林）</p>
                            </div>
                        </td>
                        <td>
                            <div class="slds-m-top_medium slds-m-bottom_medium slds-cell-wrap">
                                <p><span class="slds-badge">在職中</span></p>
                                <p><span class="slds-badge color-background-button-success">Director</span></p>
                                <p><span class="slds-badge slds-badge_inverse">ADV-B</span></p>
                            </div>
                        </td>
                        <td>
                            <div class="slds-m-top_medium slds-m-bottom_medium slds-cell-wrap">
                                <p>社内ランク</p>
                                <p><lightning:icon iconName="standard:feed" size="large"/></p>
                            </div>
                        </td>
                        <td>
                            <div class="slds-m-top_medium slds-m-bottom_medium slds-cell-wrap">
                                <p>最近の成果</p>
                                <p><lightning:icon iconName="standard:thanks" size="large"/></p>
                            </div>
                        </td>
                        <td>
                            <div class="slds-m-top_medium slds-m-bottom_medium slds-cell-wrap">
                                <p>FFS</p>
                                <p><span class="slds-badge">BDE（1234）</span></p>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </article>
</aura:component>